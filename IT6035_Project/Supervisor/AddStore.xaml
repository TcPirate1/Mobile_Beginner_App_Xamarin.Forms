<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT6035_Project.Supervisor.AddStore"
             Title="Add store"
             BackgroundColor="Violet">
    <ContentPage.Content>
        <StackLayout Margin="30">
            <Entry Keyboard="Text" Placeholder="Store Name" x:Name="StoreName"/>
            <Entry Keyboard="Text" Placeholder="Store Address" x:Name="StoreAddress"/>
            <Button Text="Add store to database" Margin="10" BorderColor="Black" BorderWidth="3" Clicked="StoreAdded"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>