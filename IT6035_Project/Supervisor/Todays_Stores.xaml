<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT6035_Project.Supervisor.Todays_Stores"
             Title="Today's Stores"
             BackgroundColor="Violet">
    <ContentPage.Content>
        <StackLayout Margin="30">
            <Label Text="Add store to Today's List" HorizontalOptions="Center" FontSize="18" FontAttributes="Bold" TextColor="Black" TextDecorations="Underline" Margin="15"/>
            <Entry Keyboard="Text" Placeholder="Store Name" x:Name="SName"/>
            <Entry Keyboard="Text" Placeholder="Store Address" x:Name="SAddress"/>
            <Button Text="Add to Today's List" Margin="10" BorderColor="Black" BorderWidth="3" Clicked="Add_to_List"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>