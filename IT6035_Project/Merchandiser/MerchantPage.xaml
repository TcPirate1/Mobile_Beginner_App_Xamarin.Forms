<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT6035_Project.MerchantPage"
             Title="Merchandiser"
             BackgroundColor="Violet">
    <ContentPage.Content>
        <StackLayout Margin="50, 0, 50, 0">
            <Label Text="Tickets" TextDecorations="Underline" TextColor="Black" FontSize="70" HorizontalOptions="CenterAndExpand" Margin="0,20,0,100"/>
            <Button Text="Ticket List" Clicked="TicketList" TextColor="Brown" FontAttributes="Italic" FontSize="40" Margin="0, 0, 0, 50" Padding="20" BorderColor="Brown" BorderWidth="4"/>
            <Button Text="Today's Tickets" Clicked="TodayTickets" TextColor="Red" FontAttributes="Bold" FontSize="35" BorderColor="Red" BorderWidth="4" BackgroundColor="LightGray"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>